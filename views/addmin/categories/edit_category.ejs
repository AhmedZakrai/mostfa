<%- include ('../compoanent/header') %>
      <div class="container-self">
        <%- include ('../compoanent/sidebar') %>
      
        <main class="container mt-3 bg-light">
          <h2 class="text-center text-primary bg-danger bg-opacity-50">
            Edit Categories
          </h2>
          <form action="" method="post" enctype="multipart/form-data" class="p-5">
            <div class="row mb-3">
              <label for="name" class="col-sm-2 col-form-label">Name</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="name" />
              </div>
            </div>
      
            <div class="row mb-3">
              <label for="id_branch" class="col-sm-2 col-form-label"
                >Choose Main Category</label
              >
              <div class="col-sm-10">
                <select
                  class="form-select"
                  aria-label="Default select example"
                  name="idBrinch"
                  id="id_branch"
                >
                  <option selected value="0">Select The Main Category</option>
                  <option value="1">One</option>
                  <option value="2">Two</option>
                  <option value="3">Three</option>
                </select>
              </div>
            </div>
      
            <div class="row mb-3">
              <label for="description" class="col-sm-2 col-form-label"
                >Description</label
              >
              <div class="col-sm-10">
                <textarea
                  class="form-control"
                  id="description"
                  name="descrpition"
                  rows="3"
                ></textarea>
              </div>
            </div>
      
            <div class="row mb-3">
              <label for="mainCategory" class="col-sm-2 col-form-label"
                >mainCategory</label
              >
              <div class="col-sm-10">
                <textarea
                  class="form-control"
                  id="mainCategory"
                  name="mainCategory"
                  rows="3"
                ></textarea>
              </div>
            </div>
      
            <button type="submit" class="btn btn-primary">save</button>
            <button type="submit" class="btn btn-primary">Cancel</button>
          </form>
        </main>
      
        <%- include ('../compoanent/footer') %>
    